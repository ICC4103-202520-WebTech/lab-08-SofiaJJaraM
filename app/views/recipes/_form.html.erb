<%= form_with(model: recipe, class: "needs-validation", local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :cook_time, "Cook Time (minutes)", class: "form-label" %>
      <%= f.number_field :cook_time, class: "form-control", required: true %>
    </div>
    <%= f.label :difficulty, class: "form-label" %>
    <%= f.select :difficulty, ['Easy', 'Medium', 'Hard'], { prompt: "Select difficulty" }, class: "form-select", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :instructions, class: "form-label" %>
    <%= f.rich_text_area :instructions %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>