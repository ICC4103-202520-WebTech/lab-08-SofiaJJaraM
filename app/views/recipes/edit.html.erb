<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="mb-4 text-center">Editing: <%= @recipe.title %></h1>
      <div class="card p-4 shadow">
        <%= render 'form', recipe: @recipe %>
      </div>
      <div class="text-center mt-3">
        <%= link_to "Show Recipe", @recipe, class: "btn btn-outline-info me-2" %>
        <%= link_to "Back to Recipes", recipes_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>