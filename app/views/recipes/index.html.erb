<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="<%= recipes_path %>">RecipeBook</a>
        </div>
    </nav>

    <div class="container">
    <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
    <% end %>

    <%= yield %> 
    </div>

    <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark">All Recipes</h1>
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-secondary" %>
    </div>

    <% if @recipes.any? %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @recipes.each do |recipe| %>
            <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                <h5 class="card-title">
                    <%= recipe.title %>
                </h5>
                
                <p class="card-text text-muted small mb-3">Cook Time: <strong><%= recipe.cook_time %> min</strong></p>
                <p class="card-text text-muted small mb-3">Difficulty: <strong><%= recipe.difficulty %></strong></p>
                
                <div class="d-flex justify-content-between align-items-center">
                    <%= link_to "View Recipe", recipe, class: "btn btn-secondary btn-sm" %>
                    <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-warning btn-sm" %>
                    <%= link_to "Delete", recipe, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger btn-sm" %>
                </div>
                </div>
            </div>
            </div>
        <% end %>
        </div>
    <% else %>
        <div class="alert alert-info text-center" role="alert">
        There are no recipes yet! <%= link_to "Be the first to create one.", new_recipe_path %>
        </div>
    <% end %>
    </div>
</body>