<h1><%= @recipe.title %></h1>
<p><strong>Cook Time:</strong> <%= @recipe.cook_time %> minutes</p>
<p><strong>Difficulty:</strong> <%= @recipe.difficulty %></p>

<h4>Instructions</h4>
<div class="border p-3 bg-white rounded">
  <%= @recipe.instructions.to_s.html_safe %>
</div>

<hr>

<%= link_to "Back to List", recipes_path, class: "btn btn-secondary" %>

<% if can? :update, @recipe %>
  <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-warning" %>
<% end %>

<% if can? :destroy, @recipe %>
  <%= link_to "Delete", @recipe,
      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this recipe?" },
      class: "btn btn-danger" %>
<% end %>